#!/usr/bin/env ruby
require 'violent_ruby'
require 'pry'

include ViolentRuby

prompt_name = 'ðŸŽ» '

Pry.config.prompt = [
  proc { |target_self, nest_level, pry|
    "#{prompt_name}(#{Pry.view_clip(target_self)})#{":#{nest_level}" unless nest_level.zero?}> "
  },
  proc { |target_self, nest_level, pry|
    "#{prompt_name}(#{Pry.view_clip(target_self)})#{":#{nest_level}" unless nest_level.zero?}* "
  }
]
Pry.config.prompt_name = prompt_name
Pry.start
